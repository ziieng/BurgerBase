<div class="container d-flex">
  <div class="row align-content-center">
    <h1>Eat-Da-Burger!</h1>
  </div>
  <div class="row">
    <div class="md-col-6 align-md-right">
      <h2 class="text-center">Burgers To Eat</h2>
      <ul class="list-group">
        {{#each undevoured}}
        <li class="list-group-item align-content-center">
          <img src="./assets/img/{{this.icon}}.png" alt="a hamburger">
          <p class="font-weight-bold p-1 text-block">{{this.name}}
            <button class="btn btn-success devour-it" data-id="{{this.id}}">Devour It!</button></p>
        </li>
        {{/each}}
      </ul>
    </div>

    <div class="md-col-6 align-md-left">
      <h2>EATEN BURGERS</h2>

      <ul class="list-unstyled">
        {{#each devoured}}
        <li class="list-group-item align-content-center">
          <img src="./assets/img/{{this.icon}}.png" alt="a hamburger">
          <p class="font-weight-bold p-1 text-block">{{this.name}}</p>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
  <div class="row align-content-center">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Type of Burger:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>